<resources >

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="actionOverflowButtonStyle">@style/Toolbar.OverFlow</item>

    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Launcher theme. Sets the main window background to the splash_screen drawable -->
    <style name="AppTheme.Launcher" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <!-- ############################### TOOLBAR UI ############################################-->

    <!-- App's toolbar global style for every activity/fragment-->
    <style name="Toolbar">
        <item name="titleTextColor">@color/colorSecondary</item>
        <item name="android:background">@color/colorPrimary</item>
        <!-- Add font -->
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- Custom overflow color-->
    <style name="Toolbar.OverFlow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorSecondary</item>
        <item name="srcCompat">@drawable/ic_account_circle_24dp</item>
    </style>

    <!-- ############################### BUTTON UI #############################################-->

    <!-- App button global style for every activity/fragment-->
    <style name="Button_global">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:background">@drawable/button_lateral_navigation</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Button_important">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:background">@drawable/button_important</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- App buttonbar button style (see fragment_event_main) -->
    <style name="Button_barButton_middle">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:background">@drawable/button_barbutton_middle</item>
    </style>
    <style name="Button_barButton_left" parent="Button_barButton_middle">
        <item name="android:background">@drawable/button_barbutton_left</item>
    </style>
    <style name="Button_barButton_right" parent="Button_barButton_middle">
        <item name="android:background">@drawable/button_barbutton_right</item>
    </style>

    <!-- App Button that can be checked (green) or unchecked (classic), to be used in bar-->
    <style name="Button_barButton_checkable" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:background">@drawable/button_barbutton_checkbutton</item>
    </style>

    <!-- Button that looks like a textView but oultines as button when clicked -->
    <style name="button_clickable_textview">
        <item name="android:background">@drawable/button_transparent</item>
        <item name="android:textColor">@drawable/text_clickable</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Button that is like global but expands to take place in the layout -->
    <style name="Button_big_button_global" parent="Button_global">
        <item name="android:paddingRight">@dimen/default_huge_padding</item>
        <item name="android:paddingLeft">@dimen/default_huge_padding</item>
        <item name="android:layout_margin">@dimen/default_huge_margin</item>
    </style>

    <!--Floating button-->
    <style name="FloatingButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorSecondary</item>
    </style>

    <style name="Button_account_widget">
        <item name="srcCompat">@drawable/ic_account_circle_24dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- ############################# CARDVIEW UI ############################################-->
    <style name="cardView_rounded" parent="Base.CardView">
        <item name="cardCornerRadius">@dimen/default_light_round_edges_radius</item>
        <item name="android:shape">ring</item>
        <item name="android:thicknessRatio">1.9</item>
    </style>

    <!-- -->


</resources>