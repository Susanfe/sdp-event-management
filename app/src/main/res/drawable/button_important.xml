<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/default_big_round_edges_radius" />
            <stroke android:width="1dip" android:color="@color/button_lateral_navigation_state_pressed" />
            <solid android:color="@color/button_lateral_navigation_state_pressed"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/default_big_round_edges_radius" />
            <stroke android:width="1dip" android:color="@color/button_lateral_navigation" />
            <solid android:color="@color/button_lateral_navigation"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/default_big_round_edges_radius" />
            <stroke android:width="1dip" android:color="@color/button_lateral_navigation"/>
            <solid android:color="@color/colorAccent" />
        </shape>
    </item>
</selector>